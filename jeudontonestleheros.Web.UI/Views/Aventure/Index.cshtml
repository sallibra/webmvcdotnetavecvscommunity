@model List<jeudontonestleheros.Core.Data.Models.Aventure>

@{
//ViewData["Title"] = "Aventure Page";

//string monTitre = "Aventure";
}

<h1 class="text-center">@ViewBag.monTitre</h1>

<div class="row justify-content-center">
    <a class="btn btn-primary text-center" asp-controller="Aventure" asp-action="Create">Nouvelle aventure</a>
</div>
<h2 class="text-center small">Vos dernières aventures</h2>
<div class="row">

    @foreach (var aventure in Model)
    {
        <a href="#" class="card border m-2 text-center" style="width: 7rem;">
            <div class="card-body">
                @aventure.Titre
            </div>
        </a>
    }

</div>
